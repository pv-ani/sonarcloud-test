{
  "name": "tp-customer-db-v2",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r dotenv/config src/index.js",
    "prod": "node --env-file=.env ./src/index.js",
    "prepare": "node ./prepare.js",
    "sonar-scan": "sonar-scanner",
    "pre-commit": "lint-staged ",
    "prettier:check": "prettier --check --config .prettierrc \"**/*.js\"",
    "prettier:write": "prettier --write --config .prettierrc \"**/*.js\"",
    "lint:check": "eslint --config .eslintrc.json \"**/*.js\"",
    "lint:fix": "eslint --fix --config .eslintrc.json \"**/*.js\"",
    "test": "npm run test:e2e && npm run test:unit &&  npm run coverage ",
    "test:unit": "cross-env NODE_ENV=testing jest --testTimeout=10000",
    "test:unit:watch": "cross-env NODE_ENV=testing jest --testTimeout=10000 --watch",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=testing  jest --testTimeout=15000 --config jest.e2e.config.js",
    "test:e2e:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=testing jest --testTimeout=10000 --config jest.e2e.config.js --watch",
    "coverage:merge": "istanbul-merge --out coverage/merged/coverage-final.json ./coverage/unit/coverage-final.json ./coverage/e2e/coverage-final.json",
    "coverage:merge-report": "nyc report --reporter=lcov --reporter=text --reporter=json --temp-dir=./coverage/merged --report-dir=./coverage/merged",
    "coverage": "npm run coverage:merge && npm run coverage:merge-report"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.540.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.1",
    "morgan": "^1.10.0",
    "request-ip": "^3.3.0",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.24.1",
    "@babel/plugin-syntax-import-assertions": "^7.24.1",
    "@babel/preset-env": "^7.24.3",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@faker-js/faker": "^8.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "istanbul-merge": "^2.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^9.1.7",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "collectCoverage": true,
    "setupFiles": [
      "dotenv/config"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/__tests__/**",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tmp/**"
    ],
    "coverageDirectory": "coverage/unit",
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ]
  },
  "keywords": [
    "javascript",
    "api",
    "node",
    "express",
    "mongo",
    "mongodb",
    "jwt",
    "postman",
    "jwt-authentication",
    "token",
    "eslint",
    "starter",
    "web",
    "app",
    "mongoose",
    "rest",
    "skeleton",
    "async",
    "await",
    "mvp",
    "front-end",
    "testing",
    "prettier",
    "redis",
    "JSDoc"
  ]
}
